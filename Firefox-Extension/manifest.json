{
  "manifest_version": 2,
  "name": "NX Enhanced",
  "version": "4.0",
  "description": "Adds quality-of-life features to NextDNS website for a more practical experience",

  "icons": { "96": "icon.png" },

  "permissions": ["storage", "tabs"],

  "content_scripts":
  [{
      "matches": ["https://my.nextdns.io/*"],
      "js": ["NXEnhanced.js"]
  }],

  "background": {
    "scripts": ["backgroundNX.js"]
  }

}